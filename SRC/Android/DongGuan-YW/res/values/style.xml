<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ButtonBottomLayoutStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:scrollbars">none</item>
    </style>

    <string-array name="header_visit_status">
        <item>全部</item>
        <item>已拜访</item>
        <item>未拜访</item>
    </string-array>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/round</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="resetpwd_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">20dip</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- <item name="android:background">#00000000</item> -->
        <item name="android:windowIsFloating">true</item>
        <!-- <item name="android:windowContentOverlay">@null</item> -->

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="datalist_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>

        <!-- <item name="android:padding">20dip</item> -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- <item name="android:background">#00000000</item> -->
        <item name="android:windowIsFloating">true</item>
        <!-- <item name="android:windowContentOverlay">@null</item> -->

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="showinfo_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- <item name="android:background">#00000000</item> -->
        <item name="android:windowIsFloating">true</item>
        <!-- <item name="android:windowContentOverlay">@null</item> -->

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    
    <style name="addhoc_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
    
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
	    <item name="android:maxHeight">50dip</item>
	    <item name="android:minHeight">8dip</item>
	    <item name="android:indeterminateOnly">false</item>
	    <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
    	<item name="android:progressDrawable">@drawable/progressbar_mini</item>
	</style>

</resources>